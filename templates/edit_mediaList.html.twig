{% extends 'base.html.twig' %}

{% block title %}Hello EditMediaListController!{% endblock %}

{% block body %}
    <div class="form">
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.url) }}
            <div class="input-group">
                {{ form_widget(form.url) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.x_last_videos) }}
            <div class="input-group">
                {{ form_widget(form.x_last_videos) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.delete_after) }}
            <div class="input-group">
                {{ form_widget(form.delete_after) }}
                <span class="input-text">jours (0 pour ne jamais supprimer)</span>
            </div>
            {{ form_errors(form.delete_after) }}
        </div>

        <div class="form-group">
            {{ form_label(form.cronjob) }}
            <div class="input-group">
                {{ form_widget(form.cronjob) }}
            </div>
            {{ form_errors(form.cronjob) }}
        </div>

        <div class="form-group">
            {{ form_label(form.quality) }}
            <div class="input-group">
                {{ form_widget(form.quality) }}
            </div>
            <span class="input-text" style="margin-top:.5em; font-style:italic; font-size:.75em">(Si qualité non disponible, qualité inférieure prise)</span>
            {{ form_errors(form.quality) }}
        </div>

        <div class="form-group">
            {{ form_label(form.path) }}
            <div class="input-group">
                {{ form_widget(form.path, { 'attr': {'readonly': 'readonly'} }) }}
            </div>
            {{ form_errors(form.path) }}
        </div>
        <fieldset class="grid">
            <div></div>
            <div></div>
            <input type="submit" value ="Modifier" style="margin:0">
            <a class="secondary" href="{{ path('show.mediaList', {id: id}) }}" role="button">Annuler</a>
            <div></div>
            <div></div>
        </fieldset>

        {{ form_end(form) }}
    </div>
{% endblock %}
